            <class name="com.course.cases.LoginTest">
                <methods>
                    <include name="loginTrue"/>
                    <include name="loginFalse"/>
                </methods>
            </class>
            <!--GetUserInfoTest-->
            <class name="com.course.cases.GetUserInfoTest">
                <methods>
                    <include name="getUserInfoTest"/>
                </methods>
            </class>
         <!--   GetUserInfoListTest-->
